/**
 * Implements hook_init().
 */
function tippgame_competition_init() {
  module_load_include('php', 'tippgame_competition', 'lib/CompetitionEntity');

}

function tippgame_competition_dao() {
  module_load_include('php', 'tippgame_competition', 'lib/CompetitionDao');

  $cache = &drupal_static(__FUNCTION__, array());
  if(!isset($cache['Dao'])) {
    $cache['Dao'] = new CompetitionDao();
  }
  return $cache['Dao'];
}

function tippgame_competition_controller() {
  module_load_include('php', 'tippgame_competition', 'lib/CompetitionController');

  $cache = &drupal_static(__FUNCTION__, array());
  if(!isset($cache['Controller'])) {
    $cache['Controller'] = new CompetitionController();
    $cache['Controller']->setCompetitionDao(tippgame_competition_dao());
    $cache['Controller']->setMatchplanDao(tippgame_matchplan_dao());
  }
  return $cache['Controller'];
}

