function _tippgame_competition_access_devel() {
  return module_exists('devel_generate') && user_access('administer tippgame');
}

function _tippgame_competition_access_generatefixtures(Competition $competition) {
  return user_access('administer tippgame')
  && tippgame_competition_controller()->isReadyForFixtureGeneration($competition->getId());
}

function _tippgame_competition_access_add_group(Competition $competition) {
  return user_access('administer tippgame')
  && !tippgame_competition_controller()->competitionGroupsComplete($competition->getId());
}

