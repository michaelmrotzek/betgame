/**
 * Implements HOOK tippgame_entity_delete()
 */
function tippgame_competition_tippgame_entity_delete($entityclass, array $entity_ids) {
  $f = 'onDelete' . $entityclass;
  if(method_exists(tippgame_competition_controller(), $f)) {
    tippgame_competition_controller()->$f($entity_ids);
  }
  
}

/**
 * Implements HOOK hook_tippgame_entity_update()
 */
function tippgame_competition_tippgame_entity_update(IEntity $entity) {
  if ($entity instanceof MatchResult) {
    tippgame_competition_controller()->onMatchResultUpdated($entity);
    
  }
}


/**
 * Get url of the current page.
 *
 * @param bool $absolute If TRUE return absolute url, else a relative to the base url.
 *
 * @return string Path
 */
function tippgame_competition_currenturl($absolute = FALSE) {
  global $base_url, $base_path;

  $uri = current_path();
  $query = drupal_get_query_parameters();
  if (!empty($query)) {
    $uri .= '?' . drupal_http_build_query($query);
  }

  if($absolute) {
    $uri = $base_url . $base_path . $uri;
  }

  return $uri;
}

function _tippgame_competition_select_gameday(Competition $competition) {
  $cache = &drupal_static(__FUNCTION__, array());
  if(!is_object($competition)) {
    return array();
  }
  if(!isset($cache[$competition->getId()])) {
    $gamedays = tippgame_competition_dao()->findGamedays($competition->getId());
    foreach($gamedays as $gd) {
      $cache[$competition->getId()][$gd->getId()] = $gd->getName();
    }
  }
  return $cache[$competition->getId()];
  
}

function _tippgame_competition_select_group(Competition $competition) {
  $cache = &drupal_static(__FUNCTION__, array());
  if(!is_object($competition)) {
    return array();
  }
  if(!isset($cache[$competition->getId()])) {
    $cache[$competition->getId()][] = t('<None>');
    $groups = tippgame_competition_dao()->findGroups($competition->getId());
    foreach($groups as $g) {
      $cache[$competition->getId()][$g->getId()] = $g->getName();
    }
  }
  return $cache[$competition->getId()];

}

